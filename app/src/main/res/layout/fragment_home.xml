<?xml version = "1.0" encoding = "utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"

        tools:context="com.example.login.mavmed.activity.HomeFragment">


        <ImageView
            android:id="@+id/Welcome"
            android:layout_width="278dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/welcome"
            android:textAlignment="center" />

        <Button
            android:id="@+id/diag_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/Welcome"
            android:layout_below="@+id/Welcome"
            android:layout_marginTop="23dp"
            android:background="@drawable/diagnosis"
            android:gravity="top" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/diag_search"
            android:layout_below="@+id/diag_search"
            android:text="Diagnosis"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/MakeAppointment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBaseline="@+id/email"
            android:layout_alignBottom="@+id/email"
            android:layout_alignStart="@+id/textView11"
            android:background="@drawable/appointment" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MakeAppointment"
            android:layout_toStartOf="@+id/textView5"
            android:text="Make Appointment"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/logout" />

        <Button
            android:id="@+id/MedicalRecord"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/reminders"
            android:layout_alignTop="@+id/diag_search"
            android:background="@drawable/medical_record" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Welcome"
            android:layout_below="@+id/MedicalRecord"
            android:text="Medical Record"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reminders"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="29dp"
            android:background="@drawable/reminder"
            android:backgroundTintMode="src_atop" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/reminders"
            android:layout_below="@+id/reminders"
            android:text="Reminder"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/User_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignBaseline="@+id/reminders"
            android:layout_alignBottom="@+id/reminders"
            android:layout_alignStart="@+id/textView8"
            android:background="@drawable/user_profile" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/User_profile"
            android:layout_below="@+id/User_profile"
            android:text="User Profile"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/email"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="24dp"
            android:background="@drawable/message" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/email"
            android:layout_below="@+id/email"
            android:text="Message"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>